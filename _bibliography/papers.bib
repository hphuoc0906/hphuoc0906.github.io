  author = {Ngo Duc Hoang, Son and Bui Vuong Tam, Anh and Phan Hoang, Phuoc and Tran Thi Cam, Giang and Nguyen Hung, Thinh and Nguyen Huu, Quyen and Phan The, Duy and Pham, Van-Hau},
  title = {BlazeSearch: A multimomal semantic search engine for retrieving in-video information for AI Challenge HCMC 2023},
